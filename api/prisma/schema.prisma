generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  nome  String  
  idade Int

@@map("users")
}

model Paciente {
  id    Int     @id @default(autoincrement())
  nome  String  
  idade Int
  cpf String @unique
  dob DateTime @db.Date

@@map("pacientes")

}

model Funcionario {
  id    Int     @id @default(autoincrement())
  nome  String  
  idade Int
  cpf String @unique
  dob DateTime @db.Date

@@map("funcionarios")

}

model Medico {
  id    Int     @id @default(autoincrement())
  nome  String  
  idade Int
  crm String @unique
  cpf String @unique
  dob DateTime @db.Date

@@map("medicos")

}
